<!DOCTYPE html>
<html lang="en">
<head>
    <title>Feedback Form</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    @*  *@
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/js/all.min.js"></script>

    @*Styles For Contact Us Page  *@
    <link href="~/Css/contactUsStyleSheet.css" rel="stylesheet" />
    <link href="~/ForContactUsPage/Animsition/css/animsition.min.css" />
    <link href="~/ForContactUsPage/DateRangePicker/daterangepicker.css" />
    <link href="~/ForContactUsPage/SelectTwo/selectTwo.min.css" />
    <link href="~/ForContactUsPage/PerfectScrollbar/perfect-scrollbar.css" />

</head>
<body>

    <main>
        <div class="container-contact100">
            <div class="contact100-map" id="google_map" data-map-x="41.723494" data-map-y="44.741427" data-pin="/Tools/Images/MapMarker.png" data-scrollwhell="0" data-draggable="1"></div>

            <button class="contact100-btn-show">
                <i class="fa fa-envelope" aria-hidden="true"></i>
            </button>

            <div class="wrap-contact100">
                <button class="contact100-btn-hide">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>

                <form class="contact100-form validate-form" asp-controller="Home" asp-action="ContactAdministrator" >
                    <span class="contact100-form-title">
                        Contact Us
                    </span>

                    <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Name is required">
                        <span class="label-input100">Your Name</span>
                        <input class="input100" type="text" name="name" placeholder="Enter your name">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <span class="label-input100">Email</span>
                        <input class="input100" type="text" name="email" placeholder="Enter your email addess">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Message is required">
                        <span class="label-input100">Message</span>
                        <textarea class="input100" name="message" placeholder="Your message here..."></textarea>
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-contact100-form-btn">
                        <button class="contact100-form-btn">
                            <span>
                                Submit
                                <i class="fa fa-check m-1-7" aria-hidden="true"></i>
                            </span>
                        </button>
                    </div>
                </form>

                <span class="contact100-more">
                    For any question contact our 24/7 email: <span class="contact100-more-highlight">WebSiteSocialNetwork2@gmail.com</span>
                </span>
            </div>
        </div>
    </main>

    @*  *@
<script src="~/lib/jquery/jquery.min.js"></script>

    @*Javascripts For Contact Us Page  *@
    <script src="~/Js/ContactUsJavaScript.js"></script>
    <script src="~/ForContactUsPage/map-custom.js"></script>
    <script src="~/ForContactUsPage/Animsition/js/animsition.min.js"></script>
    <script src="~/ForContactUsPage/CountdownTime/countdowntime.js"></script>
    <script src="~/ForContactUsPage/DateRangePicker/daterangepicker.js"></script>
    <script src="~/ForContactUsPage/DateRangePicker/moment.min.js"></script>
    <script src="~/ForContactUsPage/SelectTwo/selectTwo.min.js"></script>
    <script src="~/ForContactUsPage/PerfectScrollbar/perfect-scrollbar.min.js"></script>

    @*Scripts for google maps *@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA9iIRC4BgznHvlPfjrtsuaDjQP2tqOPUU"></script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>

</body>
</html>
