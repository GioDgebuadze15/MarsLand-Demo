@model IEnumerable<WebSite.Models.Chat>
@{
    Layout = "_MessangerLayout";
}
<div class="chat-body">

    @foreach (var chat in Model)
    {
        <a class="room-button" asp-controller="Messanger" asp-action="JoinRoom" asp-route-id="@chat.Id">
            @chat.Name
        </a>
    }
</div>
@if (Model.Count() == 0)
{
    <div class="footer-text">
        <strong>No group chats available!</strong>
    </div>
}
else
{
    <div class="footer-text">
        <strong>Click any of above chat rooms to join!</strong>
    </div>
}
